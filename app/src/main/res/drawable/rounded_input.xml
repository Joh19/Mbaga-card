<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color of the button -->
    <solid android:color="#A87342"/> <!-- Adjust to your preferred color -->

    <!-- Rounded corners -->
    <corners android:radius="20dp"/>

    <!-- Optional: Border color -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />  <!-- Hii imefungwa vizuri -->
    <!-- Padding to increase the size of the button -->
    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="12dp"
        android:bottom="12dp"/>
</shape>
